{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/admin",
            "destination": "/public/admin.html"
        },
        {
            "source": "/reset-password",
            "destination": "/public/reset-password.html"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}